{% extends 'base.html.twig' %}

{% block title %}Emotion index{% endblock %}

{% block body %}
    <h1>Emotion index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Video</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for emotion in emotions %}
            <tr>
                <td>{{ emotion.id }}</td>
                <td>{{ emotion.Video }}</td>
                <td>
                    <a href="{{ path('app_emotion_show', {'id': emotion.id}) }}">show</a>
                    <a href="{{ path('app_emotion_edit', {'id': emotion.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_emotion_new') }}">Nouveau</a>
{% endblock %}
